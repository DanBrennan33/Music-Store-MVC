@model IEnumerable<Assignment8.Controllers.TrackBase>

@{
    ViewBag.Title = "Tracks";
}

<h2>List of Tracks</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Composers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @using System.Security.Claims;
            @if ((User as ClaimsPrincipal).HasClaim(ClaimTypes.Role, "Clerk"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                @Html.Raw(" | ")
            }
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            @using System.Security.Claims;
            @if ((User as ClaimsPrincipal).HasClaim(ClaimTypes.Role, "Clerk"))
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
